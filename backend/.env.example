# Contractor Vault Environment Configuration
# REQUIRED: Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-fernet-key-here

# REQUIRED: Secret for JWT signing (use: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# Database URL (SQLite for MVP)
DATABASE_URL=sqlite:///./contractor_vault.db

# Application settings
APP_NAME=ContractorVault
DEBUG=false
LOG_LEVEL=INFO

# Discord Webhook (optional - for notifications)
# Get this from Discord: Server Settings > Integrations > Webhooks > New Webhook
DISCORD_WEBHOOK_URL=

